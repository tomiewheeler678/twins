<h1>New Customer</h1>

<%= simple_form_for @customer do |f| %>
  <%= f.input :first_name %>
  <%= f.input :middle_initial %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth %>
  <%= f.input :address %>
  <%= f.input :apartment_number %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zip_code %>
  <%= f.input :email %>
  <%= f.input :phone_number %>
  <br />
  <%= f.submit 'Create', class: 'btn btn-danger' %>
<% end %>

<%= link_to 'Back', customers_path %>
